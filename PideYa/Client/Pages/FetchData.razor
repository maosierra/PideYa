@page "/fetchdata"
@using PideYa.Shared.Entities
@inject HttpClient Http
@inject PideYa.Client.Services.OrderNotifierService orderNotifier

<PageTitle>PideYa - Pilas que tengo hambre</PageTitle>

<h1>La comelona del dia!</h1>

<p>Que hay pa hoy?</p>

@if (dishes == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var dish in dishes)
        {

            <div class="col">
                <div class="card">
                    @if (dish.Image is not null && dish.Image.Count() > 0)
                    {
                        <img src=@($"/{dish.Image.First().url}") class="card-img-top" alt=@(dish.Description??"Dish image")>
                    }
                    else
                    {
                        <img src="https://adjditec.com/web/skin/img/noimage.jpg" class="card-img-top" alt="No image found">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@dish.Name</h5>
                        <p class="card-text">@dish.Description</p>
                        <p>$@dish.Price</p>
                        <a @onclick="async ()=> await AddToCar(dish.id)" class="btn btn-primary">Mete eso ahi!</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Dish>? dishes;
    private Order? order;

    protected override async Task OnInitializedAsync()
    {
        dishes = await Http.GetFromJsonAsync<List<Dish>>("/api/Dish");
        await getActiveOrder();
    }

    private async Task getActiveOrder()
    {
        var response = await Http.GetAsync("/api/OrderByEmployee/1");
        if (response.StatusCode == System.Net.HttpStatusCode.OK)
        {
            order = await response.Content.ReadFromJsonAsync<Order>();
            await orderNotifier.AddOrder(order);
        }
    }

    private async Task AddToCar(int id)
    {
        var orderId = order?.Id ?? 0;
        var response = await Http.GetAsync($"/api/OrderAddDetail?orderId={orderId}&dishId={id}&quantity=1");
        if (response.IsSuccessStatusCode)
        {
            order = await response.Content.ReadFromJsonAsync<Order>();
            await orderNotifier.AddOrder(order);
        }
    }
}

